<div class="card">
    <div class="card-header">
        Show User
    </div>

    <div class="card-body">
        <div class="mb-2">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>
                            Id
                        </th>
                        <td>
                            <%=user.id%>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Name
                        </th>
                        <td>
                            <%=user.name%>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Email
                        </th>
                        <td>
                            <%=user.email%>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Email_verified_at
                        </th>
                        <td>
                            <%= user['createdAt'].toLocaleDateString() %> %>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Roles
                        </th>
                        <td>
                            <span class="badge badge-info">
                                <%= user.role.title %>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Status
                        </th>
                        <td>

                            <% if (user.isActive) { %>
                                <span class="text-success">
                                    Active
                                </span>
                                <% } else { %>
                                    <span class="text-danger">
                                        Not Active
                                    </span>
                                    <% } %>
                        </td>

                    </tr>
                </tbody>
            </table>
            <a style="margin-top:20px;" class="btn btn-default" href="/admin/users">
                Back
            </a>
        </div>

        <nav class="mb-3">
            <div class="nav nav-tabs">

            </div>
        </nav>
        <div class="tab-content">

        </div>
    </div>
</div>

<%- contentFor('style') %>