<div class="card">
    <div class="card-header">
        Edit Permission
    </div>
    <div class="card-body">
        <form action="/admin/permissions/update/<%=permission.id %>?_method=PUT" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="form-group <% if(errors.title){ %> has-error <% } %>">
                <label for="title">Title*</label>
                <input type="text" id="title" name="title" class="form-control" value="<%=permission.title %>" required>
                <% if(typeof errors.title !="undefined" && errors.title) { %>
                    <em class="text-danger">
                        <%= errors.title %>
                    </em>
                    <% } %>

                        <p class="helper-block">
                            Put Title Here
                        </p>
            </div>
            <div class="form-group">
                <input id="edit_permission" class="btn btn-danger" type="submit" value="Save">
            </div>
        </form>
    </div>
</div>

<%- contentFor('style') %>