<div class="card">
    <div class="card-header">
        Create Permission
    </div>

    <div class="card-body">
        <form action="/admin/permissions" method="POST" id="createPermission">
            <input id=" csrf" type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="form-group <% if(errors.title){ %> has-error <% } %>">
                <label for="title">Title*</label>
                <input class="form-control" type="text" id="title" name="title" value="<%= permission.title %>"
                    required>

                <% if(typeof errors.title !="undefined" && errors.title) { %>
                    <em class="text-danger">
                        <%= errors.title %>
                    </em>
                    <% } %>

                        <p class="helper-block">
                            Put Title Here
                        </p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    save
                </button>
            </div>
        </form>
    </div>
</div>

<%- contentFor('style') %>